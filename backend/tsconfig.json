{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2021",
      "es6",
      "dom",
      "Decorators.Legacy",
      "ESNext"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "pretty": false,
    "sourceMap": true,
    "target": "ES6",
    "outDir": "./build",
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}